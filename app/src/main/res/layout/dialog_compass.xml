<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/descript_compass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80E8CB56"
            android:padding="20dp"
            android:text="Följ pilen för att hitta skatten. Pilen blir grönare och grönare och det vibrerar mer och mer ju närmre du kommer. Ut med dig och jaga rätt på skatterna!"
            android:textAppearance="?android:attr/textAppearanceMedium" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"></LinearLayout>

</LinearLayout>